{% extends 'base.html.twig' %}

{% block title %}Modifier une Offre d'Emploi{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="text-center mb-4">Modifier l'Offre d'Emploi</h1>

        <div class="card p-4 shadow-lg">
            {{ form_start(form) }}
                
                <div class="mb-3">
                    {{ form_row(form.title, {
                        'label': 'Titre de l\'offre',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Entrez le titre de l\'offre'
                        }
                    }) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.location, {
                        'label': 'Lieu de l\'offre',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Entrez le lieu de l\'offre'
                        }
                    }) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.description, {
                        'label': 'Description de l\'offre',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Entrez la description détaillée de l\'offre',
                            'rows': 4
                        }
                    }) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.experienceRequired , {
                        'label': 'Years of Experience (optional)',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Entrez le nombre d\'années d\'expérience',
                            'type': 'number'
                        }
                    }) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.salary, {
                        'label': 'Salary (optional)',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Entrez le salaire',
                            'type': 'number'
                        }
                    }) }}
                </div>

                <!-- Technologies -->
                <div class="mb-3">
                    <label for="technologies" class="form-label">Technologies</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="flask" id="flask" name="technologies[]" {% if 'flask' in app.request.get('technologies', []) %}checked{% endif %}>
                        <label class="form-check-label" for="flask">
                            Flask
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="symfony" id="symfony" name="technologies[]" {% if 'symfony' in app.request.get('technologies', []) %}checked{% endif %}>
                        <label class="form-check-label" for="symfony">
                            Symfony
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="php" id="php" name="technologies[]" {% if 'php' in app.request.get('technologies', []) %}checked{% endif %}>
                        <label class="form-check-label" for="php">
                            PHP
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="react" id="react" name="technologies[]" {% if 'react' in app.request.get('technologies', []) %}checked{% endif %}>
                        <label class="form-check-label" for="react">
                            React
                        </label>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Enregistrer les modifications</button>
                </div>
            {{ form_end(form) }}

            <div class="text-center mt-4">
                <a href="{{ path('job_offer_index') }}" class="btn btn-secondary btn-lg">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        /* Style général de la page */
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 800px;
            margin-top: 40px;
        }

        h1 {
            font-size: 2.5rem;
            color: #343a40;
        }

        .card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Formulaire */
        .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .form-control:focus {
            border-color: #66afe9;
            box-shadow: 0 0 8px rgba(102, 175, 233, 0.6);
        }

        /* Boutons */
        .btn-lg {
            padding: 12px 30px;
            font-size: 1.1rem;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        /* Style du select et des checkboxes */
        select.form-control {
            background-color: #f1f1f1;
            height: 40px;
        }

        .form-check {
            margin-bottom: 10px;
        }
    </style>
{% endblock %}
