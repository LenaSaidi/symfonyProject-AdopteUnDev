{# templates/company_profile/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Company Profile{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1>Edit Company Profile</h1>
        </div>

        <div class="card shadow-sm p-4">
            <div class="profile-header mb-4">
                <h2 class="text-primary">Company Information</h2>
            </div>

            {{ form_start(form) }}
                <div class="profile-section mb-4">
                    <div class="form-group">
                        <label for="{{ form.companyName.vars.id }}">Company Name</label>
                        {{ form_row(form.companyName, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.location.vars.id }}">Location</label>
                        {{ form_row(form.location, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        <label for="{{ form.description.vars.id }}">Description</label>
                        {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                    </div>
                </div>

                <div class="profile-section mb-4">
                    <h2 class="text-primary">Logo</h2>
                    <div class="form-group">
                        <label for="{{ form.logo.vars.id }}">Upload Logo</label>
                        {{ form_row(form.logo, {'attr': {'class': 'form-control-file'}}) }}
                    </div>
                </div>

                <div class="profile-actions text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
