{# templates/company_profile/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ companyProfile.companyName }} - Profil{% endblock %}

{% block body %}
    <div class="profile-container">
        <div class="profile-header">
            <h1 class="company-name">{{ companyProfile.companyName }} - Profil</h1>
            <p class="company-location"><strong>Location:</strong> {{ companyProfile.location }}</p>
        </div>

        <div class="profile-content">
            <div class="profile-section">
                <h2>Description</h2>
                <p>{{ companyProfile.description }}</p>
            </div>

            <div class="profile-section">
                <h2>Logo</h2>
                {% if companyProfile.logo %}
                    <img src="{{ asset('uploads/logos/' ~ companyProfile.logo) }}" alt="Logo" class="company-logo" />
                {% else %}
                    <p>No logo uploaded.</p>
                {% endif %}
            </div>

            <div class="profile-actions">
                <a href="{{ path('company_profile_edit', {id: companyProfile.id}) }}" class="btn btn-edit">Modifier le profil</a>
            </div>
        </div>
    </div>
{% endblock %}
