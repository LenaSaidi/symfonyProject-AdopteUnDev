{% block body %}
    <h1>Modifier le Profil de {{ developerProfile.firstName }} {{ developerProfile.lastName }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.location) }}
        {{ form_row(form.experienceLevel) }}
        {{ form_row(form.minSalary) }}
        
        <h3>Technologies :</h3>
        <ul>
            {% for technology in developerProfile.technologies %}
                <li>{{ technology.name }}</li>
            {% endfor %}
        </ul>
        {{ form_row(form.technologies) }}

        <button type="submit" class="btn btn-primary">Sauvegarder les modifications</button>
    {{ form_end(form) }}

    <a href="{{ path('my_profile_show') }}" class="btn btn-secondary">Retour au profil</a>
{% endblock %}
