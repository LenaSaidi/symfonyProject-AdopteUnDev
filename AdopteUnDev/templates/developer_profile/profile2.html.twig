{% extends 'base.html.twig' %}

{% block title %}Developer Profile{% endblock %}

{% block body %}
    <h1>{{ developer.firstName }} {{ developer.lastName }}'s Profile</h1>

    <p>Average Rating: {{ averageRating }}</p>

    <h2>Evaluations</h2>
    <ul>
        {% for evaluation in evaluations %}
            <li>{{ evaluation.rating }} (Rated by: {{ evaluation.evaluator.firstName }} {{ evaluation.evaluator.lastName }})</li>
        {% endfor %}
    </ul>

    <a href="{{ path('developer_evaluate', {'id': developer.id}) }}">Evaluate this developer</a>
{% endblock %}
