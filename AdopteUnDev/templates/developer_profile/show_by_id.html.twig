{% extends 'base.html.twig' %}

{% block title %}Détails du Profil Développeur{% endblock %}

{% block body %}
    <h1>{{ developerProfile.firstName }} {{ developerProfile.lastName }}</h1>

    <p><strong>Lieu :</strong> {{ developerProfile.location }}</p>
    <p><strong>Niveau d'expérience :</strong> {{ developerProfile.experienceLevel }}</p>
    <p><strong>Salaire minimum :</strong> {{ developerProfile.minSalary }} €</p>
    <p><strong>Créé le :</strong> {{ developerProfile.createdAt|date('d/m/Y H:i') }}</p>
    
    <h3>Technologies :</h3>
    <ul>
        {% for technology in developerProfile.technologies %}
            <li>{{ technology.name }}</li>
        {% else %}
            <li>Aucune technologie sélectionnée</li>
        {% endfor %}
    </ul>

    <a href="{{ path('developer_profile_index') }}" class="btn btn-secondary">Retour à la liste</a>

    {% if app.user and app.user == developerProfile.user %}
        <a href="{{ path('developer_profile_edit', { id: developerProfile.id }) }}" class="btn btn-warning">Modifier</a>
    {% endif %}
{% endblock %}
